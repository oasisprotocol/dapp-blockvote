    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.10",
    "canonicalize": "^2.0.0",
    "cborg": "1.10.2",
    "chai": "^4.5.0",
    "dotenv": "^16.4.5",
    "hardhat": "^2.19.4",
    "hardhat-tracer": "^3.1.0",
    "npm-run-all2": "^5.0.0",
    "prettier": "^3.2.4",
    "prettier-plugin-solidity": "1.3.1",
